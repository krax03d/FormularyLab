<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_integrals_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_main"
    tools:context=".Fragment_Integrar">

    <TextView
        android:id="@+id/tv_integrals_tittle"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center|center_horizontal"
        android:text="@string/integrar_tittle"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_integrals_content"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:background="@drawable/bordes"
        android:gravity="center|center_horizontal"
        android:text="@string/integrar_content"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_integrals_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/integrar_tittle"
        android:background="@drawable/integrales2"/>

    <Button
        android:id="@+id/bt_integrals_save"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"

        android:background="@drawable/boton_save_effect"
        android:text="@string/integrar_save" />

    <Button
        android:id="@+id/bt_integrals_more"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_more_effect"
        android:text="@string/integrar_more" />
</LinearLayout>