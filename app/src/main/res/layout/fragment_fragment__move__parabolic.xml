<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    android:orientation="vertical"
    tools:context=".Fragment_Move_Parabolic">

    <TextView
        android:id="@+id/tv_move_parabolic_tittle"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center|center_horizontal"
        android:text="@string/move_parabolic_tittle"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/tv_move_parabolic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes"
        android:gravity="center|center_horizontal"
        android:text="@string/move_parabolic_content"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/iv_move_parabolic_image"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:contentDescription="@string/move_parabolic_tittle"
        android:background="@drawable/move_parabolic" />

    <Button
        android:id="@+id/bt_move_parabolic_save"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_save_effect"
        android:text="@string/move_parabolic_save" />

    <Button
        android:id="@+id/bt_move_parabolic_more"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_more_effect"
        android:text="@string/move_parabolic_more" />
</LinearLayout>