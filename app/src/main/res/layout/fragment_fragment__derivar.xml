<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/derivation_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_main"
    tools:context=".Fragment_Derivar">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_main_derivacion"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center|center_horizontal"
        android:text="@string/derivacion_tittle"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tv_content_derivacion"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/bordes"
        android:gravity="bottom|clip_horizontal|center|center_horizontal"
        android:text="@string/derivacion_content"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/iv_derivation_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/derivacion_tittle"
        android:background="@drawable/derivar" />

    <Button
        android:id="@+id/bt_derivation_save"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_save_effect"
        android:text="@string/derivacion_save" />

    <Button
        android:id="@+id/bt_derivation_more"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/boton_more_effect"
        android:text="@string/derivacion_more" />

</LinearLayout>